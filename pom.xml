							</configOptions>
							<generateSupportingFiles>false</generateSupportingFiles>
						</configuration>
					</execution>

					<!-- Reports -->
					<execution>
						<id>generate-reports</id>
						<goals><goal>generate</goal></goals>
						<configuration>
							<inputSpec>${project.basedir}/src/main/resources/openapi/reports.yaml</inputSpec>
							<generatorName>spring</generatorName>
							<library>spring-boot</library>
							<apiPackage>com.threerealty.crm.api.reports</apiPackage>
							<modelPackage>com.threerealty.crm.model.reports</modelPackage>
							<basePackage>com.threerealty.crm</basePackage>
							<configOptions>
								<interfaceOnly>true</interfaceOnly>
								<useTags>true</useTags>
							</configOptions>
							<generateSupportingFiles>false</generateSupportingFiles>
						</configuration>
					</execution>

					<!-- Integrations -->
					<execution>
						<id>generate-integrations</id>
						<goals><goal>generate</goal></goals>
						<configuration>
							<inputSpec>${project.basedir}/src/main/resources/openapi/integrations.yaml</inputSpec>
							<generatorName>spring</generatorName>
							<library>spring-boot</library>
							<apiPackage>com.threerealty.crm.api.integrations</apiPackage>
							<modelPackage>com.threerealty.crm.model.integrations</modelPackage>
							<basePackage>com.threerealty.crm</basePackage>
							<configOptions>
								<interfaceOnly>true</interfaceOnly>
								<useTags>true</useTags>
							</configOptions>
							<generateSupportingFiles>false</generateSupportingFiles>
						</configuration>
					</execution>

					<!-- Admin -->
					<execution>
						<id>generate-admin</id>
						<goals><goal>generate</goal></goals>
						<configuration>
							<inputSpec>${project.basedir}/src/main/resources/openapi/admin.yaml</inputSpec>
							<generatorName>spring</generatorName>
							<library>spring-boot</library>
							<apiPackage>com.threerealty.crm.api.admin</apiPackage>
							<modelPackage>com.threerealty.crm.model.admin</modelPackage>
							<basePackage>com.threerealty.crm</basePackage>
							<configOptions>
								<interfaceOnly>true</interfaceOnly>
								<useTags>true</useTags>
							</configOptions>
							<generateSupportingFiles>false</generateSupportingFiles>
						</configuration>
					</execution>

				</executions>
			</plugin>

		</plugins>
    </build>

</project>
